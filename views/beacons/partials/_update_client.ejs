<div class="modal fade" id="updateClientModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Update Client</h4>
      </div>
      <div class="modal-body">
        <form id="updateUUIDForm" action="/beacons/clients" method="post">
          <div class="col-md-12">
            <div class="input-group" id='primary_uuid' style="margin-bottom:20px">
              <span class="input-group-addon">Primary UUID</span>
              <input type="text" class="form-control" placeholder="12312312312-1231-2312-3123-123123123123" name="primary_uuid" pattern="^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$" required>
            </div>
          </div>
          <div class="col-md-12">
            <div class="input-group" id='secondary_uuid' style="margin-bottom:20px">
              <span class="input-group-addon">Secondary UUID</span>
              <input type="text" class="form-control" placeholder="12312312312-1231-2312-3123-123123123123" name="secondary_uuid" pattern="^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$">
            </div>
          </div>
          <div class="col-md-12" style="margin-bottom:20px">
            <input type="submit" class="btn btn-primary" value="Update" id='addNewLocalButton' style="float:right"/>
          </div>
        </form>
        <hr>
        <form id="newLocalForm" action="/beacons/clients" method="post">
          <div class="col-md-6">
            <div class="input-group" id='local_name' style="margin-bottom:20px">
              <span class="input-group-addon">Local</span>
              <input type="text" class="form-control" placeholder="Local Name" name="local_name">
            </div>
          </div>
          <div class="col-md-6">
            <div class="input-group" id='major_id' style="margin-bottom:20px">
              <span class="input-group-addon">Major ID</span>
              <input type="number" class="form-control" placeholder="1111" name="major_id">
            </div>
          </div>
          <div class="col-md-12" style="margin-bottom:20px">
            <input type="submit" class="btn btn-primary" value="Add" id='addNewLocalButton' style="float:right"/>
          </div>
        </form>
        <hr>
        <form id="newAreaForm" action="/beacons/clients" method="post">
          <div class="col-md-6">
            <div class="input-group" id='local_name' style="margin-bottom:20px">
              <span class="input-group-addon">Area</span>
              <input type="text" class="form-control" placeholder="Area Name" name="local_name">
            </div>
          </div>
          <div class="col-md-6">
            <div class="input-group" id='major_id' style="margin-bottom:20px">
              <span class="input-group-addon">Minor ID</span>
              <input type="number" class="form-control" placeholder="1111" name="major_id">
            </div>
          </div>
          <div class="col-md-12" style="margin-bottom:20px">
            <input type="submit" class="btn btn-primary" value="Add" id='addNewLocalButton' style="float:right"/>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">Ok</button>
      </div>
    </div>
  </div>
</div>
