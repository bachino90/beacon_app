<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
  <% for (var i=0; i<clients_main.length; i++) { %>
    <h1 class="page-header"><%= clients_main[i].name %> <small>(<%= clients_main[i].beacons.length %>)</small>
      <a href="function(){}" data-toggle="modal" data-target="#showClientModal"><span class="glyphicon glyphicon-cog"></span></a>
    </h1>
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead><tr><th>UUID</th><th>Major ID</th><th>Minor ID</th><th>Content</th><th>Borrar</th></tr></thead>
        <tbody>
        <% for(var j=0; j<clients_main[i].beacons.length; j++) { %>
          <tr class='clickableRow' id=<%= clients_main[i].beacons[j]._id %>>
            <td><%= clients_main[i].beacons[j].uuid %></td>
            <td><%= clients_main[i].beacons[j].major_id %></td>
            <td><%= clients_main[i].beacons[j].minor_id %></td>
            <td><%= clients_main[i].beacons[j].content %></td>
            <td>
              <form action='beacons/<%= clients_main[i].beacons[j]._id %>' method='POST'>
                <input name="_method" value="DELETE" type="hidden">
                <input type="submit" class="btn btn-danger" value="Borrar" />
              </form>
            </td>
          </tr>
        <% } %>
        </tbody>
      </table>
    </div>
  <% } %>
</div>
